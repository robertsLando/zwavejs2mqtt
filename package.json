{
  "name": "zwave-js-ui",
  "version": "9.9.0",
  "description": "Z-Wave Control Panel and MQTT Gateway",
  "keywords": [
    "mqtt",
    "zwave",
    "control-panel",
    "gateway",
    "hass",
    "homeassistant",
    "iot",
    "nodejs",
    "vue",
    "vuetify"
  ],
  "bugs": {
    "url": "https://github.com/zwave-js/zwave-js-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zwave-js/zwave-js-ui"
  },
  "license": "MIT",
  "author": "Daniel Lando <daniel.sorridi@gmail.com>",
  "bin": "server/bin/www.js",
  "scripts": {
    "dev": "vite",
    "dev-https": "SERVER_SSL='true' npm run dev",
    "dev:server": "nodemon",
    "server": "ts-node -r esbuild-register api/bin/www.ts",
    "fake-stick": "npm run mock-server -c server_config.js",
    "start": "node --preserve-symlinks server/bin/www.js",
    "bundle": "node esbuild.js",
    "lint": "npm-run-all 'lint:*'",
    "lint-fix": "npm-run-all 'lint-fix:*'",
    "lint:eslint": "eslint --ext .js,.ts,.vue .",
    "lint-fix:eslint": "eslint --fix --ext .js,.ts,.vue .",
    "lint:markdownlint": "markdownlint '**/*.md'",
    "lint-fix:markdownlint": "markdownlint --fix '**/*.md'",
    "test": "npm-run-all 'test:*'",
    "test:server": "mocha -r esbuild-register './test/**/*.test.ts'",
    "test:ui": "mocha -r @babel/register src/modules",
    "docs": "docsify serve ./docs",
    "coverage": "c8 --clean npm run test",
    "record-coverage": "c8 report --reporter=text-lcov --all --exclude='test/*' --exclude=.git --exclude=.eslintrc.js --exclude=.postcssrc.js --exclude=wallaby.js > ./coverage/lcov.info",
    "build": "npm-run-all 'build:*'",
    "build:server": "tsc",
    "build:ui": "vite build",
    "clean": "tsc --build --clean",
    "pkg": "chmod +x package.sh && ./package.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changelog-init": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it",
    "generate-pwa-assets": "npx @vite-pwa/assets-generator --preset minimal public/logo.svg"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@jamescoyle/vue-icon": "^0.1.2",
    "@kvaster/zwavejs-prom": "^0.0.2",
    "@mdi/js": "7.3.67",
    "@zwave-js/server": "^1.35.0-beta.1",
    "@zwave-js/winston-daily-rotate-file": "^4.5.6-1",
    "ansi_up": "^6.0.2",
    "archiver": "^6.0.1",
    "axios": "^1.5.1",
    "connect-history-api-fallback": "2.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "croner": "^7.0.3",
    "cronstrue": "^2.32.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.1",
    "express-session": "^1.17.3",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "js-logger": "^1.6.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^13.0.2",
    "merge": "^2.1.1",
    "morgan": "~1.10.0",
    "mqtt": "^5.3.5",
    "mqtt-jsonl-store": "^0.2.1",
    "multer": "^1.4.5-lts.1",
    "native-url": "^0.3.4",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "prismjs": "^1.29.0",
    "qr-scanner": "^1.4.2",
    "selfsigned": "^2.1.1",
    "session-file-store": "^1.5.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uplot": "^1.6.26",
    "v-snackbars": "^3.2.8",
    "vis-data": "^7.1.7",
    "vis-network": "^9.1.8",
    "vue": "^2.7.14",
    "vue-prism-editor": "^1.3.0",
    "vue-router": "^3.6.5",
    "vuedraggable": "^2.24.3",
    "vuetify": "^2.7.1",
    "winston": "^3.11.0",
    "zwave-js": "^12.5.0-beta.1"
  },
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@babel/register": "^7.22.15",
    "@release-it/conventional-changelog": "^7.0.2",
    "@tsconfig/node18": "^18.2.2",
    "@types/archiver": "^5.3.4",
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.7",
    "@types/connect-history-api-fallback": "^1.5.2",
    "@types/csurf": "^1.11.4",
    "@types/express": "^4.17.20",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "1.17.9",
    "@types/extract-zip": "^2.0.1",
    "@types/fs-extra": "^11.0.2",
    "@types/jsonfile": "^6.1.2",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mocha": "^10.0.2",
    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.6",
    "@types/proxyquire": "^1.3.29",
    "@types/sinon-chai": "^3.2.10",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@yao-pkg/pkg": "^5.9.2",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "conventional-changelog-cli": "^4.1.0",
    "docsify": "^4.13.1",
    "docsify-cli": "^4.4.4",
    "esbuild": "^0.19.11",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.17.0",
    "markdownlint-cli": "^0.37.0",
    "material-design-icons-iconfont": "^6.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "proxyquire": "^2.1.3",
    "release-it": "^16.2.1",
    "rimraf": "^5.0.5",
    "sass": "1.69.4",
    "semver": "^7.5.4",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "ts-morph": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-pwa": "^0.16.5",
    "vue-template-compiler": "^2.7.14"
  },
  "engines": {
    "node": ">= 18.12"
  },
  "pkg": {
    "scripts": [
      "server/**/*",
      "node_modules/axios/dist/node/*"
    ],
    "assets": [
      "dist/**/*",
      "snippets/**",
      "node_modules/@serialport/**",
      "node_modules/@zwave-js/serial/node_modules/@serialport/**",
      "node_modules/zwave-js/node_modules/@serialport/**",
      "node_modules/@zwave-js/config/config/devices/**"
    ]
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "build/pkg/*.zip"
      ]
    },
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "hooks": {
      "before:release": "./package.sh --bundle"
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
